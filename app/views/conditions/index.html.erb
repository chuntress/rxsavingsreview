<div class="page-header">
<h1>All Conditions</h1>
<%= link_to "Add a New Condition", new_condition_path, class: "btn btn-success"  %>
</div>

<% @conditions.each do |condition| %>
 <div class="condition"> 
  <strong><%= condition.condition_name %></strong>
  <p><%= condition.notes  %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(condition.created_at) + " ago" , condition %> |
    <span class="admin">
      <%= link_to "Edit", edit_condition_path(condition) %> |
            <%= link_to "Delete", condition, method: :delete, data: { confirm: "are you sure you want to delete this status" } %>

    </span>
 </div>
</div>
<% end %>
